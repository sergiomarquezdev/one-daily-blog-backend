{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
